@model CapitalBreweryBikeClub.Model.DailyRouteSchedule

<div class="card route-card">
    @if (Model.DateTime != DateTime.MinValue)
    {
        <h5 class="card-header">
            @Model.DateTime.ToString("dddd")
        </h5>
    }
    <div class="card-body">
        <iframe src=@Model.Links.EmbedLink scrolling="no" frameborder="0"></iframe>
    </div>
    <div class="card-footer">
        <a href="@Model.Links.FitLink" class="btn btn-primary">.FIT</a>
        <a href="@Model.Links.CueLink" class="btn btn-primary">Cue</a>
    </div>
</div>