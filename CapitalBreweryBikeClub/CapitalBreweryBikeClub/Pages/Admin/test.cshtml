@page
@model CapitalBreweryBikeClub.Pages.Admin.TestModel
@{
    ViewData["Title"] = "Test Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iphone test</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
          crossorigin="anonymous"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <style>
        nav {
            margin-bottom: 30px;
            box-shadow: 0 3px 5px 3px #888888;
            background: radial-gradient(
                                       ellipse at center,
                                       rgba(255, 255, 255, 1) 0%,
                                       rgba(246, 246, 246, 1) 49%,
                                       rgba(227, 227, 227, 1) 100%
 );
        }

        .navbar-icon-top .navbar-nav .nav-link > .fa {
            display: block;
            margin: 5px auto 5px auto;
            font-size: 36px;
        }

        .nav-link {
            text-align: center;
            display: table-cell;
            vertical-align: center;
        }

        .nav-item {
            margin: auto 15px auto 15px;
        }

        .navbar-nav {
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            justify-content: center;
        }

        .centeredtext {
            text-align: center;
        }

        .routeContainer {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-content: stretch;
            align-items: flex-start;
            margin: auto;
            max-width: 700px;
        }

        @@media only screen and (max-width: 450px) {
        iframe {
            width: 300px;
        }
        }

        @@media only screen and (min-width: 451px) {
        iframe {
            width: 400px;
        }
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar-icon-top navbar-light">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" is-active-route asp-page="/Index">
                    <i class="fa fa-calendar"></i>Schedule</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" is-active-route-folder asp-page="/Routes/Index">
                    <i class="fa fa-map"></i>Routes</a>
            </li>
        </ul>
    </nav>
</header>
<div class="routeContainer">
    <div class="card">
        @if (Model.Schedule.DateTime != DateTime.MinValue)
        {
            <h5 class="card-header centeredtext">
                @Model.Schedule.DateTime.ToString("dddd")
            </h5>
        }
        <div class="card-body">
            <iframe class="fixed" src=@Model.Schedule.Links.EmbedLink height="400"  frameborder="0"></iframe>
        </div>
        <div class="card-footer ">
            <a href="@Model.Schedule.Links.FitLink" class="btn btn-primary">.FIT</a>
            <a href="@Model.Schedule.Links.CueLink" class="btn btn-primary">Cue</a>
        </div>
    </div>
    <div class="card">
        @if (Model.Schedule.DateTime != DateTime.MinValue)
        {
            <h5 class="card-header centeredtext">
                @Model.Schedule.DateTime.ToString("dddd")
            </h5>
        }
        <div class="card-body">
            <iframe src=@Model.Schedule.Links.EmbedLink height="400" scrolling="no" frameborder="0"></iframe>
        </div>
        <div class="card-footer">
            <a href="@Model.Schedule.Links.FitLink" class="btn btn-primary">.FIT</a>
            <a href="@Model.Schedule.Links.CueLink" class="btn btn-primary">Cue</a>
        </div>
    </div>
    <div class="card">
        @if (Model.Schedule.DateTime != DateTime.MinValue)
        {
            <h5 class="card-header centeredtext">
                @Model.Schedule.DateTime.ToString("dddd")
            </h5>
        }
        <div class="card-body">
            <iframe src=@Model.Schedule.Links.EmbedLink height="400" width="300" scrolling="no" frameborder="0"></iframe>
        </div>
        <div class="card-footer">
            <a href="@Model.Schedule.Links.FitLink" class="btn btn-primary">.FIT</a>
            <a href="@Model.Schedule.Links.CueLink" class="btn btn-primary">Cue</a>
        </div>
    </div>
    <div class="card">
        @if (Model.Schedule.DateTime != DateTime.MinValue)
        {
            <h5 class="card-header centeredtext">
                @Model.Schedule.DateTime.ToString("dddd")
            </h5>
        }
        <div class="card-body">
            <iframe src=@Model.Schedule.Links.EmbedLink height="400" width="300" scrolling="no" frameborder="0"></iframe>
        </div>
        <div class="card-footer">
            <a href="@Model.Schedule.Links.FitLink" class="btn btn-primary">.FIT</a>
            <a href="@Model.Schedule.Links.CueLink" class="btn btn-primary">Cue</a>
        </div>
    </div>
</div>
</body>
</html>