@page
@model CapitalBreweryBikeClub.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Super Secret Admin Panel</title>
</head>
<body>

    <h2>Post a Note</h2>
    <div>
        <form method="post" asp-page-handler="UpdateNote">
            <textarea class="form-control" asp-for="NoteText" id="currentNote" rows="3"></textarea>
            @if(Model.CurrentNote != null)
            {
                <div>Created by: @Model.CurrentNote.CreatedBy on @Model.CurrentNote.Created</div>
                <button class="btn" asp-page-handler="ClearNote">Clear</button>
            }
            <button class="btn" asp-page-handler="UpdateNote">Update Note</button>
        </form>
    </div>

    <h2>Route Management</h2>
    <div>
        <div>
            <label>There are @Model.SelectableRoutes.Count() routes in the cache</label>
        </div>
        <form method="post" asp-page-handler="RefreshRoutes">
            <button class="btn-danger">Refresh Route Cache</button>
        </form>
    </div>

    <h2>Schedule Management</h2>

    <h3>Schedule a Ride</h3>
    <form method="post" asp-page-handler="ScheduleRoute">
        <select asp-for="DateToAdd" asp-items="Model.SelectableDates"></select>
        <select asp-for="RouteToAdd" asp-items="Model.SelectableRoutes"></select>
        <div>
            <div>
                Custom Route
            </div>
            Name: <input type="text" name="customRouteName"/>
            Ride with GPS identifier: <input type="text" name="customRouteRideWithGPSId" size="8"/>
        </div>
        <button class="btn btn-primary">Add</button>
        <button class="btn btn-secondary" asp-page-handler="AddCustom">Add Custom</button>
    </form>

    <h3>User Management</h3>
    <form method="post" asp-page-handler="InitializeDatabase">
        <button class="btn">Initialize Database</button>
    </form>
</body>
</html>