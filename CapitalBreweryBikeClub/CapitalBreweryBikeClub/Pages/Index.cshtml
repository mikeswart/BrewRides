@page
@using Microsoft.AspNetCore.Identity
@model CapitalBreweryBikeClub.Pages.IndexModel
@inject SignInManager<IdentityUser> SignInManager

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Brew Rides";
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul>
            <li>
                <h1>@User.Identity.Name Is Signed In</h1>
            </li>
            <li>
                <button type="submit" class="btn btn-link">Log out</button>
            </li>
        </ul>
    </form>
    
}
else
{
    <ul>
        <li><a asp-page="/Account/Login" class="btn btn-info" role="button">Sign In</a></li>
        <li><a asp-page="/Account/Register" class="btn btn-info" role="button">Register</a></li>
    </ul>
}
@await Component.InvokeAsync("Schedule", DateTime.Today)

