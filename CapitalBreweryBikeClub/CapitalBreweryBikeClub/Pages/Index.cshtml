@page
@model CapitalBreweryBikeClub.Pages.IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Brew Rides";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="btn-group">
        <button type="button" class="btn btn-primary" asp-page="/Account/Manage/Index" >@User.Identity.Name</button>
        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-page="/Admin/Index">Admin Console</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-page="/Account/SignOut">Sign Out</a>
        </div>
    </div>
}
else
{
    <div>
        <a asp-page="/Account/CustomLogin" class="btn btn-primary btn-lg" role="button">
            <i class="fas fa-user-ninja btn-label"></i>
        </a>
    </div>
}

@if(Model.SiteState.Note != null)
{
<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="alert alert-auto alert-info" role="alert">
        @Model.SiteState.Note.Text
    </div>
  </div>
</div>
}

@await Component.InvokeAsync("Schedule", DateTime.Today)

