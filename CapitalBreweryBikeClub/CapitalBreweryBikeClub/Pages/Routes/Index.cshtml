@page
@model CapitalBreweryBikeClub.Pages.Routes.IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Brew Routes";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @foreach (var route in @Model.Routes)
    {
        <h2><a href="/Routes/@route.link">@route.info.Name</a> (@route.info.Mileage) - @route.info.GetHashCode()</h2>
    }
</body>
</html>
